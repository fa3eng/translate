{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
  },
  "include": ["src/**/*", "src/key/*.json"],
  "exclude": ["node_modules"]
}
